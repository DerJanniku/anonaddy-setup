# === Domain & Email ===
DOMAIN=anonaddy.example.com
EMAIL=admin@example.com

# === DNS Options ===
USE_DUCKDNS=false
DUCKDNS_DOMAIN=meinsub
DUCKDNS_TOKEN=DUCKDNS_TOKEN

USE_CLOUDFLARE=false
CF_API_TOKEN=XXXX
CF_ZONE_ID=XXXX
CF_RECORD_NAME=anonaddy.example.com

# === Features ===
ENABLE_UFW=true
ENABLE_FAIL2BAN=true
ENABLE_NPM=true
ENABLE_ANONADDY=true
ENABLE_WATCHTOWER=true
ENABLE_BACKUP=true
ENABLE_MONITORING=true
ENABLE_TOR_HARDEN=true
ENABLE_IP_BLACKLIST=true
ENABLE_AIDE=true
ENABLE_AUDITD=true
ENABLE_LYNIS=true

# === Security ===
SETUP_SECURE_SSH=true # Create a new admin user and disable root SSH login
ADMIN_USER=admin
SSH_PORT=2222
SSH_ALLOWED_IP="" # e.g. "1.2.3.4" or "1.2.3.0/24"

# === Backup ===
BACKUP_DIR=/root/backups

# === Monitoring ===
UPTIMEROBOT_PING_URL=
